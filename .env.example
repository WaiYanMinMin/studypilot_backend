NODE_ENV=production
PORT=4000
TRUST_PROXY=1

# Comma-separated allowed frontend origins for credentialed CORS
CORS_ORIGIN=https://your-frontend-domain.com

# Optional: set only if you need a shared parent-domain cookie
# Example: .yourdomain.com
SESSION_COOKIE_DOMAIN=

DATABASE_URL=postgresql://user:password@host:5432/dbname?schema=public

OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

AWS_REGION=ap-southeast-1
S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Optional direct RDS check vars (script use)
DB_HOST=
DB_PORT=5432
DB_NAME=postgres
DB_USER=
DB_PASSWORD=
DB_SSL_CA_PATH=backend/cert/global-bundle.pem
